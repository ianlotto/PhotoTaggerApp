<h1>Your Photos</h1>

<ul>
  <% @photos.each do |photo| %>
  <li><%= link_to photo.title, api_photo_url(photo) %></li>
  <% end %>
</ul>

<form action="<%= api_photos_url %>" method="post" class="new-photo">

  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

  <p>
    <label>Title:
    <input type="text" name="photo[title]" value=""></label>
  </p>

  <p>
    <label>URL:
    <input type="text" name="photo[url]" value="" ></label>
  </p>

  <p><input type="submit" value="Submit Photo"></p>
</form>
